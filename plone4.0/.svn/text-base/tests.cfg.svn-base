[alltests]
recipe = plone.recipe.alltests
package-map = package-map
groups = test-groups
exclude =
    Acquisition
    ClientForm
    DateTime
    ExtensionClass
    Persistence
    Products.CMFCore
    Products.ExternalEditor
    Products.kupu
    Products.SecureMailHost
    RestrictedPython
    Unidecode
    ZConfig
    ZODB3
    docutils
    elementtree
    feedparser
    markdown
    mechanize
    plone.reload
    python-gettext
    python-openid
    pytz
    tempstorage
    transaction
    zc.lockfile
    zdaemon
    zodbcode
    zope.*
    Zope2
    zLOG
test-script = ${buildout:bin-directory}/test


[coverage-test]
recipe = zc.recipe.testrunner
eggs = ${test:eggs}
defaults = ['--coverage', '../../coverage', '-v', '--auto-progress']

[coverage-report]
recipe = zc.recipe.egg
eggs = z3c.coverage
scripts = coverage=coverage-report
arguments = ('coverage', 'report')
